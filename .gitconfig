[core]
	editor = emacs
	pager = less -x2
	excludesfile = ~tani/.gitignore
	filemode = true
[user]
	name = bitswitcher
	email = koichi.red@gmail.com
[color]
	ui = auto
	status = always
	branch = auto
	interactive = auto
	showbranch = auto
[color "diff"]
	meta = green
	new = yellow
	old = cyan
	func = white
	frag = magenta
	whitespace = red
	commit = white
[color "branch"]
	current = red
	local = yellow
	remote = cyan
[color "status"]
	header = green
	added = cyan
	changed = yellow
	untracked = white
	branch = red
[push]
	default = tracking
[alias]
	co = checkout
	st = status
	br = branch -a
	ci = commit
